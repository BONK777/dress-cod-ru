extends layout

block body
    div.box1
        h2= title
        div.items
            form#addProduct(method="POST")
                span Название товара 
                input(type="text" name="name" placeholder="Название товара")
                br
                span Брэнд 
                input(type="text" name="brand" placeholder="Брэнд")
                br
                span цена 
                input(type="text" name="price" placeholder="цена")
                br
                span категория 
                select(name="cat")
                    option(value="SHORT") Шорты
                    option(value="T-SHIRT") Футболки
                    option(value="TROUSERS") Штаны
                    option(value="JACKET") Куртки
                    option(value="SWEATERS") Свитеры
                    option(value="HODDIES") Худи
                    option(value="TROUSERS") Брюки
                br
                span Размер 
                select(name="s")
                    option(value="S") S
                    option(value="M") M
                    option(value="L") L
                    option(value="L") XL
                    option(value="L") XXL
                br
                span Цвет 
                select(name="c")
                    option(value="Red") красный
                    option(value="Blue") синий
                    option(value="Crimsom") малиновый
                    option(value="Black") чёрный
                    option(value="Green") чёрный
                    option(value="Orange") чёрный
                    option(value="White") чёрный
                br
                span добавить изображение:  
                input(type="file", name="pic")
                br
                button(type="submit") Добавить
            script(src="addDre.js")