.buy {
    font-size: 1rem;
    display: inline-block;
    cursor: pointer;
    text-decoration: none;
    color: #5d02ff;
    border: #5d02ff 0.125em solid;
    padding: 0.25em 1em;
    border-radius: 0.25em;
    transition 0.3s
    // text-shadow: 0 0 0.125em hsl(0 0% 100% / 0.3), 0 0 0.45em currentColor;
    box-shadow: inset 0 0 0.5em 0 #5d02ff, 0 0 0.5em 0 #5d02ff;
    position: relative;
}

.buy::before {
    pointer-events: none;
    content: "";
    position: absolute;
    background: #5d02ff;
    top: 120%;
    left: 0;
    width: 100%;
    height: 100%;
    transform: perspective(1.5em) rotateX(40deg) scale(1, 0.35);
    filter: blur(1em);
    opacity: 0.7;
    transition 0.3s
}

.buy::after {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    box-shadow: 0 0 2em 0.5em #5d02ff;
    opacity: 0;
    background-color: #5d02ff;
    z-index: -1;
    transition: opacity 100ms linear;
}

.buy:hover,
.buy:focus {
    color: #5d02ff;
    text-shadow: none;
}

.buy:hover::before,
.buy:focus::before {
    opacity: 1;
}
.buy:hover::after,
.buy:focus::after {
    opacity: 1;
}

.basket {
    font-size: 1rem;
    display: inline-block;
    cursor: pointer;
    text-decoration: none;
    color: #fff;
    border: #5d02ff 0.125em solid;
    padding: 0.25em 1em;
    border-radius: 0.25em;
    transition 0.3s
    text-shadow: 0 0 0.125em hsl(0 0% 100% / 0.3), 0 0 0.45em currentColor;
    // box-shadow: inset 0 0 0.5em 0 #5d02ff, 0 0 0.5em 0 #5d02ff;
    position: absolute;
    left 71%
}

