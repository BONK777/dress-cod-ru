*,
*::before,
*::after {
  box-sizing: border-box;
}

body
    margin 0
    background url(/image/bg.jpg)
    background-position center center
    // background-repeat no-repeat
    background-size cover
    backdrop-filter blur(15px)
    color #000
    font-family: 'Chakra Petch', sans-serif;
h1
    color #5d02ff
    text-align center
    font-size 30px
h2
    color #5d02ff
    text-align center
    font-size 30px

&>h1
    color rgb(156, 88, 206)
    text-align center

.box
    max-width 1000px
    margin auto

.items
    background-color #fff
    display flex
    flex-wrap wrap
    position: relative;
    border-radius: 10px;
    &::before
        content: '';
        position: absolute;
        top: 0px;
        right: 15px;
        bottom: 0px;
        left: 15px;
        background: linear-gradient(315deg,#e91e63,#5d02ff);
        z-index: -1;
        transform: skew(2deg,1deg);
        border-radius: 10px;

.item
    width calc(100% / 3 - 20px)
    font-size 15px
    margin 10px
    text-align center
    margin-bottom 32px

.img
    max-width 100%
    border-radius 8px
    cursor pointer
    transition 0.3s
    &:hover
        opacity 0.8
        

.cat
    opacity 0.7

.name 
    margin-top 24px
    margin-bottom: 12px
    min-height 2em

.brand
    margin 10px 0
    opacity 0.7
    margin-top 0

.price
    font-size 18px
    margin-bottom 12px

